{    
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noUnusedLocals": true,
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "types": [
            "react",
            "react-dom",
            "jest",
            "puppeteer"
        ]
     
    },

    "include": ["src/**/*", "test", "certificates", "electron", "backup/Throwable", "backup/PDFReader", "backup/DonutSelector", "backup/StocksApp", "backup/CardsApp"]
}
